<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:LB_FATE.MauiClient"
       x:Class="LB_FATE.MauiClient.AppShell"
       Shell.NavBarIsVisible="True"
       Shell.TabBarForegroundColor="{StaticResource ColorPrimary}"
       Shell.TabBarUnselectedColor="{StaticResource ColorMuted}"
       Shell.TabBarBackgroundColor="{StaticResource ColorSurface}"
       Shell.ForegroundColor="{StaticResource ColorOnSurface}">
  <TabBar>
    <ShellContent Title="Home" Icon="home.svg" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Title="Discover" Icon="discover.svg" ContentTemplate="{DataTemplate local:DiscoverPage}" />
    <ShellContent Title="Settings" Icon="settings.svg" ContentTemplate="{DataTemplate local:SettingsPage}" />
  </TabBar>
</Shell>
