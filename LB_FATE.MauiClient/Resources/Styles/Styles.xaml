<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- Buttons -->
  <Style x:Key="PrimaryButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorPrimary}" />
    <Setter Property="TextColor" Value="{StaticResource ColorOnPrimary}" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="16,10" />
    <Setter Property="FontAttributes" Value="Bold" />
  </Style>

  <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorSecondary}" />
  </Style>

  <Style x:Key="FlatButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{StaticResource ColorPrimary}" />
    <Setter Property="Padding" Value="8,6" />
  </Style>

  <!-- Entry/Picker -->
  <Style TargetType="Entry">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
    <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
    <Setter Property="PlaceholderColor" Value="#9CA3AF" />
    <Setter Property="HeightRequest" Value="44" />
  </Style>

  <Style TargetType="Picker">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
    <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
    <Setter Property="TitleColor" Value="#9CA3AF" />
    <Setter Property="HeightRequest" Value="44" />
  </Style>

  <!-- Labels -->
  <Style TargetType="Label">
    <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
  </Style>

  <!-- Frames -->
  <Style TargetType="Frame">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
    <Setter Property="HasShadow" Value="False" />
    <Setter Property="Padding" Value="8" />
    <Setter Property="CornerRadius" Value="8" />
  </Style>

  <!-- Card with subtle shadow -->
  <Style x:Key="CardBorder" TargetType="Border">
    <Setter Property="StrokeShape">
      <Setter.Value>
        <RoundRectangle CornerRadius="12" />
      </Setter.Value>
    </Setter>
    <Setter Property="Background" Value="{StaticResource ColorSurface}" />
    <Setter Property="StrokeThickness" Value="0" />
    <Setter Property="Padding" Value="12" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="#20000000" Offset="0,2" Radius="6" Opacity="0.6" />
      </Setter.Value>
    </Setter>
    <Setter Property="Margin" Value="0,4" />
  </Style>

  <!-- Chip-like flat button -->
  <Style x:Key="ChipButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="#EEF2FF" />
    <Setter Property="TextColor" Value="#374151" />
    <Setter Property="Padding" Value="12,6" />
    <Setter Property="CornerRadius" Value="16" />
    <Setter Property="BorderColor" Value="#C7D2FE" />
    <Setter Property="BorderWidth" Value="1" />
  </Style>

  <!-- Lightweight list item card for repeated rows -->
  <Style x:Key="ListItemBorder" TargetType="Border">
    <Setter Property="StrokeShape">
      <Setter.Value>
        <RoundRectangle CornerRadius="10" />
      </Setter.Value>
    </Setter>
    <Setter Property="Background" Value="{StaticResource ColorSurface}" />
    <Setter Property="Stroke" Value="#E5E7EB" />
    <Setter Property="StrokeThickness" Value="1" />
    <Setter Property="Padding" Value="10" />
    <Setter Property="Margin" Value="0,2" />
  </Style>

</ResourceDictionary>
