<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- Enhanced Button Styles with Visual States -->
  <Style x:Key="PrimaryButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorPrimary}" />
    <Setter Property="TextColor" Value="{StaticResource ColorOnPrimary}" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="20,14" />
    <Setter Property="FontAttributes" Value="Bold" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="{StaticResource ColorPrimary}" Offset="0,4" Radius="8" Opacity="0.3" />
      </Setter.Value>
    </Setter>
    <Setter Property="VisualStateManager.VisualStateGroups">
      <Setter.Value>
        <VisualStateGroupList>
          <VisualStateGroup x:Name="CommonStates">
            <VisualState x:Name="Normal" />
            <VisualState x:Name="Pressed">
              <VisualState.Setters>
                <Setter Property="BackgroundColor" Value="{StaticResource ColorSecondary}" />
                <Setter Property="Scale" Value="0.96" />
              </VisualState.Setters>
            </VisualState>
            <VisualState x:Name="Disabled">
              <VisualState.Setters>
                <Setter Property="BackgroundColor" Value="{StaticResource ColorMuted}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Opacity" Value="0.6" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateGroupList>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorSecondary}" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="{StaticResource ColorSecondary}" Offset="0,4" Radius="8" Opacity="0.3" />
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorAccent}" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="{StaticResource ColorAccent}" Offset="0,4" Radius="8" Opacity="0.3" />
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="FlatButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{StaticResource ColorPrimary}" />
    <Setter Property="Padding" Value="12,8" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="BorderColor" Value="{StaticResource ColorBorder}" />
    <Setter Property="BorderWidth" Value="1" />
  </Style>

  <!-- Modern Input Controls -->
  <Style TargetType="Entry">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
    <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
    <Setter Property="PlaceholderColor" Value="{StaticResource ColorMuted}" />
    <Setter Property="HeightRequest" Value="48" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="VisualStateManager.VisualStateGroups">
      <Setter.Value>
        <VisualStateGroupList>
          <VisualStateGroup x:Name="CommonStates">
            <VisualState x:Name="Normal">
              <VisualState.Setters>
                <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
              </VisualState.Setters>
            </VisualState>
            <VisualState x:Name="Focused">
              <VisualState.Setters>
                <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
                <Setter Property="TextColor" Value="{StaticResource ColorPrimary}" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateGroupList>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="Picker">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
    <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
    <Setter Property="TitleColor" Value="{StaticResource ColorMuted}" />
    <Setter Property="HeightRequest" Value="48" />
    <Setter Property="FontSize" Value="16" />
  </Style>

  <!-- Labels -->
  <Style TargetType="Label">
    <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
  </Style>

  <!-- Frames -->
  <Style TargetType="Frame">
    <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
    <Setter Property="HasShadow" Value="False" />
    <Setter Property="Padding" Value="8" />
    <Setter Property="CornerRadius" Value="8" />
  </Style>

  <!-- Enhanced Modern Card Design -->
  <Style x:Key="CardBorder" TargetType="Border">
    <Setter Property="StrokeShape">
      <Setter.Value>
        <RoundRectangle CornerRadius="16" />
      </Setter.Value>
    </Setter>
    <Setter Property="Background" Value="{StaticResource ColorSurface}" />
    <Setter Property="Stroke" Value="{StaticResource ColorBorder}" />
    <Setter Property="StrokeThickness" Value="1" />
    <Setter Property="Padding" Value="16" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="{StaticResource ColorCardShadow}" Offset="0,4" Radius="12" Opacity="0.08" />
      </Setter.Value>
    </Setter>
    <Setter Property="Margin" Value="0,6" />
  </Style>

  <!-- Feature Card for special content -->
  <Style x:Key="FeatureCard" TargetType="Border" BasedOn="{StaticResource CardBorder}">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Color="{StaticResource ColorGradientStart}" Offset="0.0" />
          <GradientStop Color="{StaticResource ColorGradientEnd}" Offset="1.0" />
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="{StaticResource ColorPrimary}" Offset="0,6" Radius="16" Opacity="0.2" />
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Enhanced Chip Button with Interaction States -->
  <Style x:Key="ChipButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="#F1F5F9" />
    <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
    <Setter Property="Padding" Value="16,8" />
    <Setter Property="CornerRadius" Value="20" />
    <Setter Property="BorderColor" Value="{StaticResource ColorBorder}" />
    <Setter Property="BorderWidth" Value="1" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontAttributes" Value="None" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="{StaticResource ColorCardShadow}" Offset="0,2" Radius="4" Opacity="0.05" />
      </Setter.Value>
    </Setter>
    <Setter Property="VisualStateManager.VisualStateGroups">
      <Setter.Value>
        <VisualStateGroupList>
          <VisualStateGroup x:Name="CommonStates">
            <VisualState x:Name="Normal" />
            <VisualState x:Name="Pressed">
              <VisualState.Setters>
                <Setter Property="BackgroundColor" Value="{StaticResource ColorPrimary}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Scale" Value="0.95" />
              </VisualState.Setters>
            </VisualState>
            <VisualState x:Name="PointerOver">
              <VisualState.Setters>
                <Setter Property="BackgroundColor" Value="#E2E8F0" />
                <Setter Property="BorderColor" Value="{StaticResource ColorPrimary}" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateGroupList>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Enhanced List Item with Hover Effects -->
  <Style x:Key="ListItemBorder" TargetType="Border">
    <Setter Property="StrokeShape">
      <Setter.Value>
        <RoundRectangle CornerRadius="12" />
      </Setter.Value>
    </Setter>
    <Setter Property="Background" Value="{StaticResource ColorSurface}" />
    <Setter Property="Stroke" Value="{StaticResource ColorBorder}" />
    <Setter Property="StrokeThickness" Value="1" />
    <Setter Property="Padding" Value="14" />
    <Setter Property="Margin" Value="0,4" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="{StaticResource ColorCardShadow}" Offset="0,2" Radius="6" Opacity="0.04" />
      </Setter.Value>
    </Setter>
    <Setter Property="VisualStateManager.VisualStateGroups">
      <Setter.Value>
        <VisualStateGroupList>
          <VisualStateGroup x:Name="CommonStates">
            <VisualState x:Name="Normal" />
            <VisualState x:Name="PointerOver">
              <VisualState.Setters>
                <Setter Property="Background" Value="#FAFBFC" />
                <Setter Property="Stroke" Value="{StaticResource ColorPrimary}" />
                <Setter Property="Shadow">
                  <Setter.Value>
                    <Shadow Brush="{StaticResource ColorPrimary}" Offset="0,4" Radius="12" Opacity="0.1" />
                  </Setter.Value>
                </Setter>
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateGroupList>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Enhanced Status Chip with Animation -->
  <Style x:Key="StatusChip" TargetType="Border">
    <Setter Property="StrokeShape">
      <Setter.Value>
        <RoundRectangle CornerRadius="20" />
      </Setter.Value>
    </Setter>
    <Setter Property="StrokeThickness" Value="0" />
    <Setter Property="Padding" Value="12,8" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="{StaticResource ColorCardShadow}" Offset="0,2" Radius="6" Opacity="0.08" />
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Modern Progress Bar Container -->
  <Style x:Key="ProgressContainer" TargetType="Border">
    <Setter Property="BackgroundColor" Value="#F1F5F9" />
    <Setter Property="StrokeThickness" Value="0" />
    <Setter Property="HeightRequest" Value="10" />
    <Setter Property="StrokeShape">
      <Setter.Value>
        <RoundRectangle CornerRadius="5" />
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Enhanced ScrollView Style -->
  <Style TargetType="ScrollView">
    <Setter Property="BackgroundColor" Value="Transparent" />
  </Style>

  <!-- Modern Switch Style -->
  <Style TargetType="Switch">
    <Setter Property="OnColor" Value="{StaticResource ColorPrimary}" />
    <Setter Property="ThumbColor" Value="White" />
  </Style>

</ResourceDictionary>
