<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LB_FATE.AvaloniaClient.ViewModels"
             xmlns:controls="using:LB_FATE.AvaloniaClient.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="LB_FATE.AvaloniaClient.Views.GameView"
             x:DataType="vm:GameViewModel">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Top bar: Connection status -->
        <Border Grid.Row="0" Background="#1e1e1e" Padding="10">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Day:" VerticalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="{Binding Day}" VerticalAlignment="Center" Foreground="Yellow" FontWeight="Bold"/>
                    <TextBlock Text="Phase:" VerticalAlignment="Center" Foreground="White" Margin="20,0,0,0"/>
                    <TextBlock Text="{Binding Phase}" VerticalAlignment="Center" Foreground="Yellow" FontWeight="Bold"/>
                    <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="LightGray" Margin="20,0,0,0"/>
                    <Border Background="LimeGreen" CornerRadius="3" Padding="5,2" IsVisible="{Binding IsMyTurn}">
                        <TextBlock Text="YOUR TURN" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                    <Button Content="Connect" Command="{Binding ConnectCommand}" IsEnabled="{Binding !IsConnected}"/>
                    <Button Content="Disconnect" Command="{Binding DisconnectCommand}" IsEnabled="{Binding IsConnected}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main content: Game board + Side panels -->
        <Grid Grid.Row="1" ColumnDefinitions="*,300">
            <!-- Left: Game board -->
            <Border Background="#1a1a1a" Padding="20">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <controls:GameBoardControl DataContext="{Binding}"/>
                </ScrollViewer>
            </Border>

            <!-- Right: Unit info + Logs -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*,200">
                <!-- Unit list -->
                <Border Grid.Row="0" Background="#2b2b2b" BorderBrush="#444" BorderThickness="1,0,0,1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="UNITS" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding Units}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#333" Padding="5" Margin="0,2" CornerRadius="3">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <TextBlock Grid.Column="0" Text="{Binding Symbol}" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,10,0"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Id}" Foreground="White" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding ClassName}" Foreground="Gray" FontSize="10"/>
                                                <ProgressBar Value="{Binding HpPercentage}" Maximum="100" Height="4" Margin="0,2,0,0" Foreground="LimeGreen"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Hp}" Foreground="LimeGreen" FontSize="11" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding Mp, StringFormat={}{0:0.#}}" Foreground="CornflowerBlue" FontSize="10" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Skills panel -->
                <Border Grid.Row="1" Background="#2b2b2b" BorderBrush="#444" BorderThickness="1,0,0,1" Padding="10">
                    <StackPanel>
                        <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                            <TextBlock Text="SKILLS" Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <Button Grid.Column="1" Content="Refresh" Command="{Binding GetSkillsCommand}" Padding="5,2" FontSize="10"/>
                        </Grid>
                        <ItemsControl ItemsSource="{Binding Skills}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Background="#444" Padding="8" Margin="0,2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <TextBlock Grid.Column="0" Text="{Binding Index}" Foreground="Yellow" FontWeight="Bold" Margin="0,0,10,0"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold"/>
                                                <TextBlock Foreground="Gray" FontSize="10">
                                                    <Run Text="MP:"/>
                                                    <Run Text="{Binding MpCost}"/>
                                                    <Run Text=" | Range:"/>
                                                    <Run Text="{Binding Range}"/>
                                                    <Run Text=" | CD:"/>
                                                    <Run Text="{Binding Cooldown}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <TextBlock Grid.Column="2" Text="{Binding CooldownLeft}" Foreground="Orange" FontSize="12" VerticalAlignment="Center" IsVisible="{Binding CooldownLeft}"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Log panel -->
                <Border Grid.Row="2" Background="#1e1e1e" BorderBrush="#444" BorderThickness="1,0,0,0" Padding="10">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="COMBAT LOG" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Logs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="LightGray" FontSize="11" TextWrapping="Wrap" Margin="0,1"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom bar: Command input -->
        <Border Grid.Row="2" Background="#1e1e1e" BorderBrush="#444" BorderThickness="0,1,0,0" Padding="10">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                <TextBox Grid.Column="0"
                         Text="{Binding CommandInput}"
                         Watermark="Enter command (e.g., move 5 3, attack P1, use 0 P2, pass)"
                         Background="#2b2b2b"
                         Foreground="White"
                         BorderBrush="#555"
                         Padding="8"/>
                <Button Grid.Column="1" Content="Send" Command="{Binding SendCommandCommand}" Margin="5,0,0,0" Padding="15,8"/>
                <Button Grid.Column="2" Content="Pass" Command="{Binding PassCommand}" Margin="5,0,0,0" Padding="15,8"/>
                <Button Grid.Column="3" Content="Skills" Command="{Binding GetSkillsCommand}" Margin="5,0,0,0" Padding="15,8"/>
                <Button Grid.Column="4" Content="Help" Margin="5,0,0,0" Padding="15,8">
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel Width="300">
                                <TextBlock Text="Commands:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" FontSize="11">
                                    <Run Text="move x y" FontWeight="Bold"/> - Move to position
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="11">
                                    <Run Text="attack P#" FontWeight="Bold"/> - Attack player
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="11">
                                    <Run Text="use n P#" FontWeight="Bold"/> - Use skill #n on target
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="11">
                                    <Run Text="pass" FontWeight="Bold"/> - End turn
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="11" Margin="0,10,0,0">
                                    <Run Text="Mouse:" FontWeight="Bold"/> Left-click cell to move, right-click unit to attack
                                </TextBlock>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>