<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LB_FATE.AvaloniaClient.ViewModels"
        xmlns:views="using:LB_FATE.AvaloniaClient.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="LB_FATE.AvaloniaClient.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="LB_FATE - Avalonia Client"
        Width="1200" Height="800"
        MinWidth="800" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl>
        <TabItem Header="Connection">
            <Border Background="#1e1e1e" Padding="20">
                <StackPanel Spacing="15" MaxWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="LB_FATE" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Avalonia Client" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Server Host:" Foreground="White"/>
                    <TextBox Text="{Binding GameViewModel.ServerHost}" Watermark="127.0.0.1" Background="#2b2b2b" Foreground="White" BorderBrush="#555"/>

                    <TextBlock Text="Server Port:" Foreground="White"/>
                    <TextBox Text="{Binding GameViewModel.ServerPort}" Watermark="35500" Background="#2b2b2b" Foreground="White" BorderBrush="#555"/>

                    <Button Content="Connect to Server"
                            Command="{Binding GameViewModel.ConnectCommand}"
                            IsEnabled="{Binding !GameViewModel.IsConnected}"
                            HorizontalAlignment="Stretch"
                            Padding="0,15"
                            FontSize="16"
                            FontWeight="Bold"/>

                    <TextBlock Text="{Binding GameViewModel.StatusMessage}"
                               Foreground="LightGray"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </TabItem>

        <TabItem Header="Game" IsEnabled="{Binding GameViewModel.IsConnected}">
            <views:GameView DataContext="{Binding GameViewModel}"/>
        </TabItem>
    </TabControl>

</Window>
