{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LBR",
  "scopeName": "source.lbr",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.number-sign.lbr", "match": "#.*$" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lbr",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.lbr", "match": "\\\\.|\\\"" }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.lbr", "match": "(?i)\\b-?\\d+(?:\\.\\d+)?\\b" },
        { "name": "constant.language.boolean.lbr", "match": "(?i)\\b(true|false)\\b" },
        { "name": "keyword.operator.compare.lbr", "match": ">=|<=|==|!=|>|<" }
      ]
    },
    "keywords": {
      "patterns": [
        { "name": "keyword.control.section.lbr", "match": "(?i)\\b(role|id|description|desc|vars|tags|skills|skill)\\b" },
        { "name": "keyword.operator.dslmeta.lbr", "match": "(?i)\\b(cost|mp|range|cooldown|min_range|sealed_until|targeting|any|enemies|allies|self|tile)\\b" },
        { "name": "keyword.control.flow.lbr", "match": "(?i)\\b(if|then|else|repeat|times|parallel|for|each|in|do|chance)\\b" },
        { "name": "keyword.operator.action.lbr", "match": "(?i)\\b(deal|physical|magic|damage|heal|move|to|dash|towards|up|line|length|radius|add|remove|tag|global|set|var|unit|tile|from|consume|id|of|with|limit|nearest|farthest|has|ignore|defense|resist|point)\\b" },
        { "name": "constant.language.units.lbr", "match": "(?i)\\b(caster|target|it|point)\\b" },
        { "name": "punctuation.separator.lbr", "match": ";|," }
      ]
    }
  }
}
